<Page
    x:Class="_03.ChuckNorris_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_03.ChuckNorris_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="#FFE0FF76" Padding="50">
        
        <TextBlock HorizontalAlignment="Left"  
                   FontWeight="Black"
                   Text="Chuck Norris Jokes 1.0" FontSize="48"/>
        <TextBox Text="http://api.icndb.com/jokes/random" 
                  FontSize="42" Margin="0 50 0 20" />
        <Button Content="Tell me a Joke" 
                Padding="20"
                FontSize="42" Click="Button_Click"/>
        
        <ListView Name="Jokes" Height="400"  FontSize="42"/>

    </StackPanel>
</Page>
